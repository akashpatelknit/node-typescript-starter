{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": ["src/**/*.test.ts", "src/**/*.spec.ts", "node_modules"],
  "exec": "cross-env NODE_ENV=development tsx src/server.ts",
  "restartable": "rs",
  "delay": 1000,
  "verbose": true,
  "colours": true,
  "legacyWatch": false,
  "signal": "SIGTERM",
  "events": {
    "restart": "echo 'Server restarting...'",
    "start": "echo 'Server started'",
    "crash": "echo 'Server crashed - waiting for changes...'",
    "exit": "echo 'Server exited'"
  }
}
